---
import Layout from "../../layouts/Layout.astro";
import "e-layout";
---

<Layout headings={[]} title="Instagram-style Card List Example">
  <p>
    This example demonstrates an Instagram-style feed design using `e-grid`,
    `e-box`, and `e-frame` components.
  </p>

  <style>
    /* Card styles */
    .card {
      display: flex;
      flex-direction: column;
      gap: 0;
      width: 100%;
      max-width: 468px;
      margin: 0 auto 2em;
    }

    /* Image styles */
    .card img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Placeholder */
    .placeholder {
      background-color: #f5f5f5;
      display: grid;
      place-items: center;
      color: #aaa;
      font-size: 0.9em;
      height: 100%;
    }

    /* Card header */
    .card-header {
      display: flex;
      align-items: center;
      padding: 0.8em;
      border-bottom: 1px solid #efefef;
    }

    /* User avatar */
    .user-avatar {
      width: 2em;
      height: 2em;
      border-radius: 50%;
      background-color: #efefef;
      margin-right: 0.8em;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #999;
      font-size: 1em;
    }

    /* Username */
    .username {
      font-weight: 600;
      flex-grow: 1;
      font-size: 0.9em;
    }

    /* Action buttons area */
    .card-actions {
      display: flex;
      padding: 0.8em;
    }

    .action-buttons {
      display: flex;
      gap: 1em;
      flex-grow: 1;
    }

    .action-icon {
      font-size: 1.3em;
      color: #262626;
    }

    /* Likes and comments */
    .card-content {
      padding: 0 0.8em 0.8em;
      font-size: 0.9em;
    }

    .likes {
      font-weight: 600;
      margin-bottom: 0.4em;
    }

    .caption {
      margin-bottom: 0.4em;
      line-height: 1.4;
    }

    .caption strong {
      font-weight: 600;
    }

    .comments {
      color: #8e8e8e;
      margin-bottom: 0.4em;
    }

    .timestamp {
      font-size: 0.75em;
      color: #8e8e8e;
      text-transform: uppercase;
    }

    /* Stories feed */
    .stories-container {
      display: flex;
      overflow-x: auto;
      padding: 1em 0;
      margin-bottom: 1em;
      border-bottom: 1px solid #dbdbdb;
      scrollbar-width: none; /* Firefox */
    }

    .stories-container::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Edge */
    }

    .story {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-right: 1em;
      min-width: 4.5em;
    }

    .story-avatar {
      width: 4em;
      height: 4em;
      border-radius: 50%;
      background-color: #fff;
      margin-bottom: 0.5em;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .story-avatar::before {
      content: "";
      position: absolute;
      top: -0.2em;
      left: -0.2em;
      right: -0.2em;
      bottom: -0.2em;
      border-radius: 50%;
      background: linear-gradient(
        45deg,
        #f09433,
        #e6683c,
        #dc2743,
        #cc2366,
        #bc1888
      );
      z-index: -1;
    }

    .story-avatar img {
      width: 3.8em;
      height: 3.8em;
      border-radius: 50%;
      border: 2px solid #fff;
      object-fit: cover;
    }

    .story-username {
      font-size: 0.75em;
      text-align: center;
      width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    /* Layout adjustments */
    .instagram-feed {
      max-width: 30em;
      width: 100%;
      margin: 0 auto;
    }
  </style>

  <e-stack class="example-page-container ">
    <e-stack intrinsic class="instagram-feed">
      <e-reel padding="0.5em" gap="0" no-bar>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_1.jpg" alt="User 1 story" />
          </div>
          <div class="story-username">user_name</div>
        </div>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_2.jpg" alt="User 2 story" />
          </div>
          <div class="story-username">design_guru</div>
        </div>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_3.jpg" alt="User 3 story" />
          </div>
          <div class="story-username">web_dev</div>
        </div>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_4.jpg" alt="User 4 story" />
          </div>
          <div class="story-username">photo_lover</div>
        </div>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_5.jpg" alt="User 5 story" />
          </div>
          <div class="story-username">travel_addict</div>
        </div>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_1.jpg" alt="User 6 story" />
          </div>
          <div class="story-username">coffee_time</div>
        </div>
        <div class="story">
          <div class="story-avatar">
            <img src="/e-layout/thumb_2.jpg" alt="User 7 story" />
          </div>
          <div class="story-username">art_gallery</div>
        </div>
      </e-reel>

      <!-- Posts -->
      <e-stack gap="2em">
        <!-- 投稿1 -->
        <e-box border="1px solid #dbdbdb" radius="0.3em" padding="0" class="card">
          <!-- ヘッダー -->
          <div class="card-header">
            <div class="user-avatar">
              <i class="fa-solid fa-user"></i>
            </div>
            <div class="username">user_name</div>
            <i class="fa-solid fa-ellipsis"></i>
          </div>

          <!-- 画像 -->
          <e-frame ratio="1:1">
            <img src="/e-layout/thumb_1.jpg" alt="Post 1" />
          </e-frame>

          <!-- アクションボタン -->
          <div class="card-actions">
            <div class="action-buttons">
              <i class="fa-regular fa-heart action-icon"></i>
              <i class="fa-regular fa-comment action-icon"></i>
              <i class="fa-regular fa-paper-plane action-icon"></i>
            </div>
            <i class="fa-regular fa-bookmark action-icon"></i>
          </div>

          <!-- コンテンツ -->
          <div class="card-content">
            <div class="likes">123 likes</div>
            <p class="caption">
              <strong>user_name</strong> Some description here... #elayout #components
              #webdesign
            </p>
            <p class="comments">View all 2 comments</p>
            <p class="timestamp">2 hours ago</p>
          </div>
        </e-box>

        <!-- 投稿2 -->
        <e-box border="1px solid #dbdbdb" radius="0.3em" padding="0" class="card">
          <div class="card-header">
            <div class="user-avatar">
              <i class="fa-solid fa-user"></i>
            </div>
            <div class="username">another_user</div>
            <i class="fa-solid fa-ellipsis"></i>
          </div>

          <e-frame ratio="1:1">
            <img src="/e-layout/thumb_2.jpg" alt="Post 2" />
          </e-frame>

          <div class="card-actions">
            <div class="action-buttons">
              <i class="fa-regular fa-heart action-icon"></i>
              <i class="fa-regular fa-comment action-icon"></i>
              <i class="fa-regular fa-paper-plane action-icon"></i>
            </div>
            <i class="fa-regular fa-bookmark action-icon"></i>
          </div>

          <div class="card-content">
            <div class="likes">87 likes</div>
            <p class="caption">
              <strong>another_user</strong> More content description. #design #layout
            </p>
            <p class="comments">View all 5 comments</p>
            <p class="timestamp">5 hours ago</p>
          </div>
        </e-box>

        <!-- 投稿3 -->
        <e-box border="1px solid #dbdbdb" radius="0.3em" padding="0" class="card">
          <div class="card-header">
            <div class="user-avatar">
              <i class="fa-solid fa-user"></i>
            </div>
            <div class="username">example_user</div>
            <i class="fa-solid fa-ellipsis"></i>
          </div>

          <e-frame ratio="1:1">
            <img src="/e-layout/thumb_3.jpg" alt="Post 3" />
          </e-frame>

          <div class="card-actions">
            <div class="action-buttons">
              <i class="fa-regular fa-heart action-icon"></i>
              <i class="fa-regular fa-comment action-icon"></i>
              <i class="fa-regular fa-paper-plane action-icon"></i>
            </div>
            <i class="fa-regular fa-bookmark action-icon"></i>
          </div>

          <div class="card-content">
            <div class="likes">42 likes</div>
            <p class="caption">
              <strong>example_user</strong> Example post text. #webdev
            </p>
            <p class="comments">View 1 comment</p>
            <p class="timestamp">1 day ago</p>
          </div>
        </e-box>
      </e-stack>
    </e-stack>
  </e-stack>
</Layout>
